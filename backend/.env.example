# Database Configuration
DATABASE_URL=postgres://panicless:panicless_dev@localhost:5432/panicless_library

# JWT Configuration
# IMPORTANT: Change this secret in production! Use a long random string.
JWT_SECRET=your-secret-key-change-in-production-use-64-chars-or-more
JWT_ACCESS_TOKEN_EXPIRY=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRY=604800  # 7 days in seconds

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
# Options: trace, debug, info, warn, error
RUST_LOG=info,panicless_backend=debug,sqlx=warn

# Environment
# Options: development, production
ENVIRONMENT=development
